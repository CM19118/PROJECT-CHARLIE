<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #f2f2f2;" stylesheets="@../../../css/Buttons.css" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1">

    <!--Para el nombre del cliente -->
    <Label layoutX="108.0" layoutY="97.0" style="-fx-font-size: 14px;" text="Nombre del Cliente:" />
    <TextField fx:id="campoNombreCliente" layoutX="258.0" layoutY="97.0" style="-fx-pref-width: 200px;" />

    <!--Para el telefono del cliente -->
    <Label layoutX="108.0" layoutY="147.0" style="-fx-font-size: 14px;" text="Teléfono del Cliente:" />
    <TextField fx:id="campoTelefonoCliente" layoutX="258.0" layoutY="147.0" style="-fx-pref-width: 200px;" />

    <!--Para el DUI del cliente-->
    <Label layoutX="108.0" layoutY="197.0" style="-fx-font-size: 14px;" text="DUI del Cliente:" />
    <TextField fx:id="campoDuiCliente" layoutX="258.0" layoutY="197.0" style="-fx-pref-width: 200px;" />

    <!-- Botón Agregar -->
    <Button fx:id="btnGuardarDatosCliente" layoutX="177.0" layoutY="293.0" style="-fx-text-fill: white;" text="Agregar" />

    <!-- Botón Cancelar -->
    <Button fx:id="btnCancelarDatosCliente" layoutX="383.0" layoutY="293.0" style="-fx-background-color: ##589bed;" text="Cancelar" />

</AnchorPane>
